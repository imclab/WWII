<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/white" />

            <corners android:radius="4dp" />

            <gradient android:endColor="@color/bg_btn_pressed" android:gradientRadius="120" android:startColor="@color/bg_btn_green_pressed" android:type="radial" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/bg_btn_green_pressed" />

            <corners android:radius="4dp" />

            <gradient android:endColor="@color/btn_edge_color" android:gradientRadius="120" android:startColor="@color/btn_center_color" android:type="radial" />
        </shape></item>

</selector>