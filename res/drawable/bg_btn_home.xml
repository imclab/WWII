<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/white" />

            <corners android:radius="2dp" />

            <gradient android:angle="-90" android:endColor="#551E4224" android:startColor="#55000000" android:type="linear" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#551E4224" />

            <corners android:radius="2dp" />

            <gradient android:angle="-90" android:endColor="#551E4224" android:startColor="#55000000" android:type="linear" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/white" />

            <corners android:radius="2dp" />

            <gradient android:angle="-90" android:endColor="#02380A" android:startColor="@android:color/black" android:type="linear" />
        </shape></item>

</selector>